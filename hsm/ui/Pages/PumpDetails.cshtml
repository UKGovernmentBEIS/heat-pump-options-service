@page
@model OCC.HSM.UI.Pages.PumpDetailsModel
@{
    ViewData["Title"] = @Model.HeatPumpName;
    Layout = "~/Pages/Shared/_altLayout.cshtml";
}

@if (Model.Message != null)
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l"> @Model.Message</h1>
            <p class="govuk-body"> <a class="govuk-notification-banner__link" asp-page="Results">Go back</a>.</p>
        </div>
    </div>
}

@await Html.PartialAsync("_PumpDetailsContent", Model.PumpDetailsViewModel)
